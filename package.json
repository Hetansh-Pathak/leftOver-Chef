{
  "name": "leftover-chef",
  "version": "1.0.0",
  "description": "Turn Your Leftovers Into Delicious Meals - MERN Stack Application",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start": "cd backend && npm start"
  },
  "keywords": [
    "recipe",
    "leftover",
    "cooking",
    "mern",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Hetansh Pathak",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
